@model List<RentCar.Models.DriverPrice>
@{
    ViewBag.Title = "Driver Price";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Driver Price</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Loại xe</th>
                            <th>Giá theo giờ</th>
                            <th>Giá theo ngày</th>
                            <th>Giá theo lộ trình(tính trên km)</th>
                            <th>Ngày đăng</th>
                            <th>Ngày sửa</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var drive in Model)
                        {
                        <tr>
                            <td>@drive.Id</td>
                            <td>@drive.loaiXe</td>
                            <td>@drive.giaTheoGio</td>
                            <td>@drive.giaTheoNgay</td>
                            <td>@drive.giaTheoLoTrinh</td>
                            <td>@drive.ngayDang</td>
                            <td>@drive.ngaySua</td>
                            <td>
                                <a href="~/DriverPrice/Edit/@drive.Id">Edit</a>
                                <a onclick="return confirm('Are you sure?');" href="~/DriverPrice/Delete/@drive.Id" class="text-danger">Delete</a>
                            </td>
                            
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>







